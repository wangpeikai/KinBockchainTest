<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_print_client_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print client data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_create_new_wallet_compat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:text="Create New Wallet-Compat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_clear_all_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear all account"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_new_wallet_compat" />

    <Button
        android:id="@+id/btn_print_all_wallet_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print all wallet data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_print_first_wallet_data" />

    <Button
        android:id="@+id/btn_print_first_wallet_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print First Wallet Data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_print_client_data" />

    <TextView
        android:id="@+id/tv_log"
        android:layout_width="match_parent"
        android:layout_height="578dp"
        android:gravity="top|left"
        android:hint="Base Compat Log"
        android:padding="12dp"
        android:scrollbars="none"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>